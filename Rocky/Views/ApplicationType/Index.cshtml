@model IEnumerable<Rocky.Models.ApplicationType>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="ApplicationType" asp-action="Create">Create New Application Type</a>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-12">

            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped w-100">
                    <thead>
                        <tr>
                            <th align="center">Id</th>
                            <th align="center">Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center" width="10%">@item.Id</td>
                                <td width="70%">@item.Name</td>
                                <td width="30%">
                                    <div class="btn btn-group">
                                        <a asp-controller="ApplicationType" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary mx-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-controller="ApplicationType" asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger mx-1">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No record exist!</p>
            }

        </div>

    </div>
</div>
