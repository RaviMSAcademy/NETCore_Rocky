@model Rocky.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="text-center">
        <button data-filter="all" class="btn btn-dark filter-button">All</button>
        @foreach (var obj in Model.Categories)
        {
            <button data-filter="@obj.Name.Replace(' ','_')" class="btn btn-outline-secondary filter-button">@obj.Name</button>
        }
    </div>
    <div class="row pt-4">

        @foreach (var product in Model.Products)
        {

            //display all products
            <partial name="_IndividualProductCard" model="product" />
        }

    </div>
</div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {

            $(".filter-button").click(function () {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }
            });

        });
    </script>
}